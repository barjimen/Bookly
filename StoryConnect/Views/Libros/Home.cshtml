@model LibrosLeyendoProgreso
@{
    var nombreUsuario = Context.Session.GetString("nombre");
    var idUsuario = Context.Session.GetInt32("id");
}
    <title>Tu Biblioteca Personal</title>
    <style>
        .section-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        }


        .book-card:hover {
        transform: translateY(-5px);
        }

        .book-cover {
        width: 100%;
        height: 220px;
        object-fit: cover;
        }

        .book-info {
        padding: 1rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        }

        .book-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        line-height: 1.3;
        }

        .book-author {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.8rem;
        }

        .book-stats {
        color: #6c757d;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: auto;
        }

        .subject-card {
        border-radius: 12px;
        padding: 1.2rem;
        height: 100%;
        position: relative;
        overflow: hidden;
        transition: transform 0.2s;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .subject-card:hover {
        transform: translateY(-5px);
        }

        .subject-card.highlighted {
        background-color: #f3ca35;
        color: #000;
        }

        .subject-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
        position: relative;
        z-index: 2;
        }

        .subject-count {
        font-size: 1.6rem;
        font-weight: 700;
        position: relative;
        z-index: 2;
        }

        .subject-icon {
        position: absolute;
        bottom: 0.8rem;
        right: 0.8rem;
        font-size: 3rem;
        opacity: 0.2;
        z-index: 1;
        }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .reading-modal {
        background-color: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 350px;
        overflow: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .modal-header {
        background: linear-gradient(135deg, #8a2be2, #4dc9ff);
        color: white;
        padding: 20px;
        text-align: center;
        position: relative;
    }

    .modal-title {
        margin: 0;
        font-size: 22px;
        font-weight: 600;
    }

    .book-icon {
        position: absolute;
        right: 20px;
        top: 20px;
        font-size: 24px;
    }

    .modal-body {
        padding: 25px;
        background-color: #f9f9ff;
    }

    .progress-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .page-info {
        color: #5a5a7a;
        font-size: 14px;
        font-weight: 500;
    }

    .progress-wrapper {
        position: relative;
        height: 12px;
        background-color: #e0e0ff;
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 25px;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(to right, #8a2be2, #4dc9ff);
        border-radius: 10px;
        transition: width 0.5s ease;
        position: relative;
    }

    .progress-percentage {
        position: absolute;
        right: 10px;
        top: -25px;
        font-size: 14px;
        font-weight: 600;
        color: #8a2be2;
    }

    .page-input-group {
        margin-bottom: 25px;
    }

    .page-input-label {
        display: block;
        margin-bottom: 8px;
        color: #5a5a7a;
        font-weight: 500;
    }

    .page-input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0ff;
        border-radius: 10px;
        font-size: 16px;
        transition: all 0.3s;
        outline: none;
    }

        .page-input:focus {
            border-color: #8a2be2;
            box-shadow: 0 0 0 3px rgba(138, 43, 226, 0.2);
        }

    .modal-footer {
        padding: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-cancel {
        background-color: #f0f0f7;
        color: #5a5a7a;
    }

        .btn-cancel:hover {
            background-color: #e5e5f0;
        }

    .btn-update {
        background: linear-gradient(135deg, #8a2be2, #4dc9ff);
        color: white;
    }

        .btn-update:hover {
            opacity: 0.9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(138, 43, 226, 0.3);
        }

    .celebration {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%);
        font-size: 30px;
    }

    /* Trigger button styles */
    .update-progress-btn {
        background: linear-gradient(135deg, #8a2be2, #4dc9ff);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .update-progress-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(138, 43, 226, 0.3);
        }

    /* For active modal */
    .modal-active {
        display: flex;
    }


    </style>
    <div class="container-fluid" style="padding-top: 2rem!important; padding-bottom:6rem!important;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 style="color: indigo">¡Hola, @nombreUsuario !</h1>
        </div>

        <!-- Libros Leyendo Section -->
        <div class="mb-5">

            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                @if (Model.Leyendos.Count == 0)
                {
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h5>No tienes libros en lectura actualmente</h5>
                            <p class="text-muted">¡Añade un libro!</p>
                            <a asp-action="Index" asp-controller="Libros">
                                <i class="fas fa-plus me-2"></i>
                                Añadir libro
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var libro in Model.Leyendos)
                    {
                        <div class="col">
                            <div class="card">
                                <img src="~/images/books/@libro.ImagenPortada" alt="@libro.Titulo" class="book-cover">
                                <div class="book-info">
                                    <h5 class="book-title">@libro.Titulo</h5>
                                    <p class="book-author">@libro.NombreAutor, @libro.FechaPublicacion</p>

                                    <div class="card-footer bg-transparent">
                                        <div class="btn-group w-100">
                                            <a asp-action="Detalles" asp-controller="Libros" asp-route-id="@libro.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Detalles
                                            </a>
                                            <div class="btn-group dropright">
                                                <button class="btn dropdown-toggle
                                                @(libro.IdLista == 1 ? "btn-primary" :
                                                  libro.IdLista == 2 ? "btn-success" :
                                                  libro.IdLista == 3 ? "btn-warning" :
                                                  libro.IdLista == 4 ? "btn-black" :"btn-secondary")"
                                                type="button" id="dropdownMenuButton-@libro.Id"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                                    @if (libro.IdLista == 0)
                                                    {
                                                        <span>Añadir a lista</span>
                                                    }
                                                    else if (libro.IdLista == 1)
                                                    {
                                                        <span>Leyendo</span>
                                                    }
                                                    else if (libro.IdLista == 2)
                                                    {
                                                        <span>Leído</span>
                                                    }
                                                    else if (libro.IdLista == 3)
                                                    {
                                                        <span>Próxima Lectura</span>
                                                    }
                                                    else if (libro.IdLista == 4)
                                                    {
                                                        <span>No terminado</span>
                                                    }
                                                </button>

                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton-@libro.Id">
                                                    <button class="dropdown-item dropdown-libro mover-libro" data-idLibro="@libro.Id" data-destino="1" data-origen="@libro.IdLista">Leyendo</button>
                                                    <button class="dropdown-item dropdown-libro mover-libro" data-idLibro="@libro.Id" data-destino="2" data-origen="@libro.IdLista">Leído</button>
                                                    <button class="dropdown-item dropdown-libro mover-libro" data-idLibro="@libro.Id" data-destino="3" data-origen="@libro.IdLista">Próxima Lectura</button>
                                                    <button class="dropdown-item dropdown-libro mover-libro" data-idLibro="@libro.Id" data-destino="4" data-origen="@libro.IdLista">No Terminado</button>
                                                    <button class="dropdown-item dropdown-libro mover-libro" data-idLibro="@libro.Id" data-destino="0" data-origen="@libro.IdLista">Eliminar</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div>
                                        @{
                                            var progresodata = Model.ProgresoLectura?.FirstOrDefault(p => p.idLibro == libro.Id);
                                            @if (progresodata != null && progresodata.idLibro == libro.Id)
                                            {
                                            <div class="mt-2">
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <small class="text-muted">Reading progress</small>
                                                    <small class="text-muted">@progresodata.Pagina / @libro.paginas</small>
                                                </div>
                                                <div class="progress" style="height: 6px; background-color: rgba(255,255,255,0.1);">
                                                    @{
                                                        var progressbar = (progresodata.Pagina * 100) / libro.paginas;
                                                    }
                                                </div>
                                                <div class="progress-bar" role="progressbar"
                                                     style="width: @progressbar%; background-color: aqua;"
                                                     aria-valuenow="@progresodata.Pagina"
                                                     aria-valuemin="0"
                                                     aria-valuemax="@libro.paginas">
                                                    @progressbar%
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#progressModal-@libro.Id">
                                                <i class="fa fa-book"></i> Actualizar progreso
                                            </button>
                                            <div class="modal fade" id="progressModal-@libro.Id" tabindex="-1" aria-labelledby="modalProgresoLecturaLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header bg-primary text-white">
                                                            <h5 class="modal-title" id="modalProgresoLecturaLabel">Actualizar Progreso de Lectura</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form id="formProgreso-@libro.Id" method="post" action="/Libros/UpdateProgreso">
                                                                <input type="hidden" id="idProgreso" name="ID" value="@progresodata.ID" />
                                                                <input type="hidden" id="idlibro" name="idLibro" value="@libro.Id" />

                                                                <div class="mb-3">
                                                                    <label for="pagina">Página actual:</label>
                                                                    <input type="text" id="pagina" name="Pagina" class="form-control" value="@progresodata.Pagina" />
                                                                </div>

                                                                <button type="submit" class="btn btn-success">Actualizar</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div>

                            </div>
                        </div>
                    
                    }
                }
            </div>
        </div>

    
    

        <!-- Subject Section -->
        <h2 class="mt-5 mb-4">Categorías</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Ciencia</h3>
                    <div class="subject-count">1.2k</div>
                    <i class="fas fa-flask subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Arte</h3>
                    <div class="subject-count">1.8k</div>
                    <i class="fas fa-palette subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Comercio</h3>
                    <div class="subject-count">230</div>
                    <i class="fas fa-chart-line subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Diseño</h3>
                    <div class="subject-count">80</div>
                    <i class="fas fa-bezier-curve subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card highlighted">
                    <h3 class="subject-title">Cocina</h3>
                    <div class="subject-count">180</div>
                    <i class="fas fa-utensils subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Otros</h3>
                    <div class="subject-count">900</div>
                    <i class="fas fa-layer-group subject-icon"></i>
                </div>
            </div>
        </div>

        <!-- Otros datos section -->
        <h2 class="mt-5 p-3" style="background-color: cornflowerblue; color: white;">
            Otros datos
        </h2>
    </div>

    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".mover-libro").click(function () {
                var idlibro = $(this).data("idlibro");
                var destino = $(this).data("destino");
                var origen = $(this).data("origen");

                $.ajax({
                    url: '/Libros/MoverLibrosEntreListas',
                    type: 'POST',
                    data: { idlibro: idlibro, destino: destino, origen: origen },
                    success: function (response) {
                        alert("item movido exitosamente.");
                        location.reload(); // Recargar la página para actualizar la lista
                    },
                    error: function (xhr, status, error) {
                        alert("Error al mover el item: " + xhr.responseText);
                    }
                });
            });

                document.addEventListener("DOMContentLoaded", function () {
        var progressModal = document.getElementById('progressModal');
        progressModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var idProgreso = button.getAttribute('data-idprogreso');
            var idLibro = button.getAttribute('data-idlibro');
            var pagina = button.getAttribute('data-pagina');

            document.getElementById('idProgreso').value = idProgreso;
            document.getElementById('idlibro').value = idLibro;
            document.getElementById('pagina').value = pagina;
        });
    });


        });
    </script>