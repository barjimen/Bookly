@model List<LibrosLeyendo>
@{
    var nombreUsuario = Context.Session.GetString("nombre");
    var idUsuario = Context.Session.GetInt32("id");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu Biblioteca Personal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .section-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .book-card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.2s;
            height: 100%;
            display: flex;
            flex-direction: column;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .book-card:hover {
                transform: translateY(-5px);
            }

        .book-cover {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .book-info {
            padding: 1rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .book-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.3rem;
            line-height: 1.3;
        }

        .book-author {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.8rem;
        }

        .book-stats {
            color: #6c757d;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-top: auto;
        }

        .subject-card {
            border-radius: 12px;
            padding: 1.2rem;
            height: 100%;
            position: relative;
            overflow: hidden;
            transition: transform 0.2s;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .subject-card:hover {
                transform: translateY(-5px);
            }

            .subject-card.highlighted {
                background-color: #f3ca35;
                color: #000;
            }

        .subject-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.3rem;
            position: relative;
            z-index: 2;
        }

        .subject-count {
            font-size: 1.6rem;
            font-weight: 700;
            position: relative;
            z-index: 2;
        }

        .subject-icon {
            position: absolute;
            bottom: 0.8rem;
            right: 0.8rem;
            font-size: 3rem;
            opacity: 0.2;
            z-index: 1;
        }

        .action-btn {
            border: none;
            background-color: rgba(0,0,0,0.1);
            color: inherit;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

            .action-btn:hover {
                background-color: rgba(0,0,0,0.2);
            }

        .empty-state {
            border-radius: 12px;
            padding: 3rem 1rem;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .empty-icon {
            font-size: 3rem;
            color: #6c757d;
            margin-bottom: 1rem;
        }

        .filter-btn {
            background-color: transparent;
            border: 1px solid rgba(0,0,0,0.2);
            border-radius: 50px;
            padding: 0.4rem 1rem;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="padding-top: 2rem!important; padding-bottom:6rem!important;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Bienvenidx, @nombreUsuario</h1>
        </div>

        <!-- Libros Leyendo Section -->
        <div class="mb-5">
           
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                @if (Model.Count == 0)
                {
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-book-open"></i>
                            </div>
                            <h5>No tienes libros en lectura actualmente</h5>
                            <p class="text-muted">¿Por qué no añades tu primer libro?</p>
                            <button class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-2"></i>
                                Añadir libro
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var libro in Model)
                    {
                        <div class="col">
                            <div class="book-card">
                                <img src="~/images/books/@libro.ImagenPortada" alt="@libro.Titulo" class="book-cover">
                                <div class="book-info">
                                    <h5 class="book-title">@libro.Titulo</h5>
                                    <p class="book-author">@libro.NombreAutor, @libro.FechaPublicacion</p>

                                    <div class="book-stats">
                                        <div class="dropdown ms-auto">
                                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton-@libro.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                                Cambiar lista
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@libro.Id">
                                                <li><button class="dropdown-item mover-libro" data-idlibro="@libro.Id" data-destino="1" data-origen="@libro.IdLista"><i class="fas fa-book-open me-2"></i> Leyendo</button></li>
                                                <li><button class="dropdown-item mover-libro" data-idlibro="@libro.Id" data-destino="2" data-origen="@libro.IdLista"><i class="fas fa-check me-2"></i> Leído</button></li>
                                                <li><button class="dropdown-item mover-libro" data-idlibro="@libro.Id" data-destino="3" data-origen="@libro.IdLista"><i class="fas fa-clock me-2"></i> Próxima Lectura</button></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Subject Section -->
        <h2 class="mt-5 mb-4">Categorías</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Ciencia</h3>
                    <div class="subject-count">1.2k</div>
                    <i class="fas fa-flask subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Arte</h3>
                    <div class="subject-count">1.8k</div>
                    <i class="fas fa-palette subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Comercio</h3>
                    <div class="subject-count">230</div>
                    <i class="fas fa-chart-line subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Diseño</h3>
                    <div class="subject-count">80</div>
                    <i class="fas fa-bezier-curve subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card highlighted">
                    <h3 class="subject-title">Cocina</h3>
                    <div class="subject-count">180</div>
                    <i class="fas fa-utensils subject-icon"></i>
                </div>
            </div>
            <div class="col">
                <div class="subject-card">
                    <h3 class="subject-title">Otros</h3>
                    <div class="subject-count">900</div>
                    <i class="fas fa-layer-group subject-icon"></i>
                </div>
            </div>
        </div>

        <!-- Otros datos section -->
        <h2 class="mt-5 p-3" style="background-color: cornflowerblue; color: white;">
            Otros datos
        </h2>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/moveBooks.js"></script>
</body>
</html>