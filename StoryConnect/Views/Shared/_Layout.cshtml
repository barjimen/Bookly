



<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Toggle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5a2e7b7193.js" crossorigin="anonymous"></script>
    <style>
        html,
        body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        }

        .layout-container {
        display: flex;
        height: 100vh;
        /* Hace que el layout ocupe toda la pantalla */
        }

        .content-container {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        /* 🔥 Permite que el contenido crezca y empuje el footer */
        min-height: 100vh;
        }

        .navbar {
        position: sticky;
        top: 0;
        z-index: 1000;
        background-color: #f8f9fa;
        }

        #sidebar {
        width: 220px;
        min-width: 220px;
        max-width: 220px;
        background-color: #e9ecef;
        height: 100vh;
        /* 🔥 Se asegura de que siempre llegue hasta abajo */
        position: sticky;
        top: 0;
        overflow-y: auto;
        }

        #sidebar.collapsed {
        width: 100px;
        min-width: 100px;
        max-width: 100px;
        }

        .sidebar-text {
        display: inline;
        transition: opacity 0.3s;
        }

        #sidebar.collapsed .sidebar-text {
        opacity: 0;
        width: 0;
        display: none;
        }

        .sidebar-links a {
        display: flex;
        align-items: center;
        padding: 12px;
        font-size: 1rem;
        text-align: left;
        }

        #sidebar.collapsed .sidebar-links a {
        justify-content: center;
        font-size: 1.3rem;
        }

        .content {
        flex-grow: 0.1;
        overflow-y: auto;
        padding: 20px;
        }

        table {
        width: 100%;
        table-layout: fixed;
        }

        .btn-iconos {
        margin-bottom: 10px;
        }

        .d-flex-exp {
        flex-grow: 1;
        overflow: hidden;
        position: sticky;
        }
    </style>
</head>

<body>
    @{
        var usuario = Context.Session.GetString("nombre");
        var idUsuario = Context.Session.GetInt32("id");
        var avatar = Context.Session.GetString("imagen_perfil");
    }
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <button class="btn" id="toggleSidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">LOGO</a>
            <div class="d-flex flex-grow-1 justify-content-center position-relative">
                <form class="d-flex w-50">
                    <input id="searchBox" class="form-control me-2" type="text" placeholder="Buscar libros..."
                    aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">🔍</button>
                </form>
                <div id="searchResults" class="dropdown-menu justify-content-center"
                style="display: none; position: absolute; top: 100%; left: 48%; transform: translateX(-50%);">
                    <!-- Aquí se mostrarán los resultados -->
                </div>
            </div>

        </div>
        <div class="d-flex align-items-center">
            <button class="btn btn-light me-2">🔔</button>
            <button class="btn btn-light">👤</button>
        </div>
    </nav>
    <main class="layout-container">
        <aside id="sidebar" class="p-3">
            <ul class="list-unstyled sidebar-links">
                @if (usuario != null && avatar != null && idUsuario.HasValue)
                {
                    <li>
                        <a asp-controller="Libros" asp-action="Home" class="btn btn-light w-100 btn-iconos">
                            <i class="fa-solid fa-house"></i> <span class="sidebar-text">Inicio</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-light w-100 btn-iconos">
                            <i class="fa-solid fa-house"></i> <span class="sidebar-text">Inicio</span>
                        </a>
                    </li>
                }
                <li>
                    <a asp-controller="Libros" asp-action="Index" class="btn btn-light w-100 btn-iconos">
                        <i class="fa-solid fa-book"></i> <span class="sidebar-text">Libros</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Autores" asp-action="Index" class="btn btn-light w-100 btn-iconos">
                        <i class="fa-solid fa-user"></i> <span class="sidebar-text">Autores</span>
                    </a>
                </li>
                @if ( usuario != null && avatar != null && idUsuario.HasValue)
                {
                    <li>
                        <a asp-controller="Usuarios" asp-action="Perfil" class="btn btn-light w-100 btn-iconos">
                            <span class="sidebar-text">@usuario -> @idUsuario</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuarios" asp-action="Logout" class="btn btn-light w-100 btn-iconos">
                            <i class="fa-solid fa-left-to-bracket"></i> <span class="sidebar-text">Logout</span>
                        </a>
					</li>
                }
                else{
                    <li>
                        <a asp-controller="Usuarios" asp-action="Register" class="btn btn-light w-100 btn-iconos">
                            <i class="fa-solid fa-plus"></i> <span class="sidebar-text">Registro</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuarios" asp-action="Login" class="btn btn-light w-100 btn-iconos">
                            <i class="fa-solid fa-right-to-bracket"></i> <span class="sidebar-text">Login</span>
                        </a>
                    </li>
                }
            </ul>
        </aside>
        <div class="content-container">
            <div class="content">
                <section class="container">
                    @RenderBody()


                </section>

            </div>
        </div>
    </main>
    <script src="~/js/live-search.js">
    </script>
</body>

</html>