<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Toggle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5a2e7b7193.js" crossorigin="anonymous"></script>
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }

		<-- EL PROBLEMA DE NO HACER SCROLL ES DEL D-FLEX SI LO MODIFICO LA BARRA SE VA AL PEDO-->
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: #f8f9fa;
        }

        #sidebar {
            width: 220px;
            min-width: 220px;
            max-width: 220px;
            transition: all 0.3s;
            height: 100vh;
            position: sticky;
            top: 0;
            overflow-y: auto;
            background-color: #e9ecef;
        }

            #sidebar.collapsed {
                width: 100px;
                min-width: 100px;
                max-width: 100px;
            }

        .sidebar-text {
            display: inline;
            transition: opacity 0.3s;
        }

        #sidebar.collapsed .sidebar-text {
            opacity: 0;
            width: 0;
            display: none;
        }

        .sidebar-links a {
            display: flex;
            align-items: center;
            padding: 12px;
            font-size: 1rem;
            text-align: left;
        }

        #sidebar.collapsed .sidebar-links a {
            justify-content: center;
            font-size: 1.3rem;
        }

        .content {
            flex-grow: 1;
            overflow-y: auto; /* Permite el scroll solo en el contenido */
            padding: 15px;
        }

        table {
            width: 100%;
            table-layout: fixed;
        }

        .btn-iconos {
            margin-bottom: 10px;
        }

        .d-flex-exp{
            flex-grow: 1;
            overflow: hidden;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <button class="btn" id="toggleSidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">LOGO</a>
            <div class="d-flex flex-grow-1 justify-content-center position-relative">
                <form class="d-flex w-50">
                    <input id="searchBox" class="form-control me-2" type="text" placeholder="Buscar libros..." aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">🔍</button>
                </form>
                <div id="searchResults" class="dropdown-menu justify-content-center"
                     style="display: none; position: absolute; top: 100%; left: 48%; transform: translateX(-50%);">
                    <!-- Aquí se mostrarán los resultados -->
                </div>
            </div>

            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-light me-2">🔔</button>
                <button class="btn btn-light">👤</button>
            </div>
    </nav>
    <div class="d-flex">
        <div id="sidebar" class="p-3">
            <ul class="list-unstyled sidebar-links">
                <li><a asp-controller="Libros" asp-action="Index" class="btn btn-light w-100 btn-iconos"><i class="fa-solid fa-house"></i> <span class="sidebar-text">Inicio</span></a></li>
                <li><a href="#" class="btn btn-light w-100 btn-iconos"><i class="fa-solid fa-book"></i> <span class="sidebar-text">Libros</span></a></li>
                <li><a href="#" class="btn btn-light w-100 btn-iconos"><i class="fa-solid fa-user"></i> <span class="sidebar-text">Autores</span></a></li>
                <li><a asp-controller="Usuarios" asp-action="Register" class="btn btn-light w-100 btn-iconos"><i class="fa-solid fa-plus"></i> <span class="sidebar-text">Registro</span></a></li>
                <li><a asp-controller="Usuarios" asp-action="Login" class="btn btn-light w-100 btn-iconos"><i class="fa-solid fa-right-to-bracket"></i> <span class="sidebar-text">Login</span></a></li>
                @if (Context.Session.GetInt32("id")!= null)
                {
                    <p>Bienvenido, @Context.Session.GetString("UserName")</p>
                    <a asp-controller="Libros" asp-action="Index" class="btn btn-danger">Mis libros</a>
                    <a asp-controller="Usuarios" asp-action="Logout" class="btn btn-danger">Salir</a>
	                
				}
                else
                {
                    <a asp-controller="Libros" asp-action="Index">no inicio</a>

                }

            </ul>
        </div>
        <div class="content d-flex-exp">
            <section class="container mt-4">
                @RenderBody()
            </section>
        </div>
    </div>
    <script src="~/js/live-search.js">
    </script>
</body>
</html>
